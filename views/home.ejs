<!DOCTYPE html>
<html>

<head>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <title>Amzing Chef</title>

    <meta name="author" content="your name" />
    <meta name="description" content="" />


    <script>
        $(document).ready(function() {
            var counter = 0;
            $("#addButton").click(function() {
                var fc = ('0' + (counter + 1)).slice(-2);
                var newTextBoxDiv = $(document.createElement('div'))
                    .attr("id", 'TextBoxDiv' + counter);
                // newTextBoxDiv.after().html('<label>Ingredient #' + counter + ' : </label>' +
                //     '<input type="text" name="textbox' + counter +
                //     '" id="textbox' + counter + '" value="" >');
                var html =
                    '<label>Ingredient #' + fc + ': </label>' +
                    '<input type="text" name="textbox' + fc + '" id="textbox' + fc + '" value="">';
                newTextBoxDiv.after().html(html);

                newTextBoxDiv.appendTo("#TextBoxesGroup");
                counter++;
                if (counter == 2) {
                    document.getElementById("removeButton").disabled = false;
                }
            });
            $("#removeButton").click(function() {
                counter--;
                $("#TextBoxDiv" + counter).remove();
                if (counter == 1) {
                    document.getElementById("removeButton").disabled = true;
                }
            });
        });
    </script>


</head>

<body ng-app="home" ng-controller="home" onload="document.getElementById('addButton').click()">
