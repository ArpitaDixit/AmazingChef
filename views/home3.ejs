<!DOCTYPE html>
<html>

<head>
    <title>Amazing Chef</title>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="/styles/mystyles3.css">
    <link rel="stylesheet" href="/jquery-ui/jquery-ui.min.css">
    <script src="/jquery-ui/jquery-ui.min.js" type="text/javascript"></script>
    <script src="/scripts/home3.js" type="text/javascript"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</head>

<body ng-app="home" ng-controller="home">


    <div id="page">
        <!-- logo includes welcome message and a home picture -->
        <div id="logo">
            <a id="welcome-message" href="/" style="text-decoration:none">
                <h1>WELCOME TO AMAZING CHEF</h1>
            </a>
            <img src="/images/welcomeChef.jpg" width="300px">
        </div>
        <!--ingredient Bar is where ingredient is selected-->
        <div id="ingreBar" class="ingreBar rounded-div">
            <p>Ingredients Bar</p>
        </div>
        <div id="dialog" title="Alert">Minimum 2 ingredients are required</div>
        <!--ingredient menu to show all available ingredients from the system-->
        <!--<div id="ingreMenu" class="ingreBar rounded-div">-->
        <div id="ingreMenu">
        </div>
        <!--search button-->
        <input type="button" value="Search Recipe" id="searchButton3" onclick=searches3()>

        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#formModal">
            Add recipe
        </button>




        <div id="searchResult"></div>

        <div id="addrecipe"></div>

        <!--Add form Modal -->
        <div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-labelledby="formModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <form method = "post" action = "/addRecipe">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Add recipe</h4>
                        </div>
                        <div class="modal-body">
                            <div class = "form-group">
                                <label>Recipe Name</label>
                                <input type = "text" class = "form-control" name="name" />
                            </div>

                            <div class = "form-group">
                                <label>Ingredients</label>
                                <input type = "text" class = "form-control" name="ingredients" />
                            </div>

                            <div class = "form-group">
                                <label>Directions</label>
                                <input type = "text" class = "form-control" name="directions" />
                            </div>


                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <input type="submit" class="btn btn-primary" value = "Save"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>



</body>

</html>